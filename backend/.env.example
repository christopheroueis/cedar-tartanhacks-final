# ClimateCredit Backend Environment Variables
# Copy this file to .env and fill in your actual API keys

# Server Configuration
PORT=3001
NODE_ENV=development

# Database (Supabase)
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# ML Service (runs locally)
ML_SERVICE_URL=http://localhost:8000

# AI Providers for Conversation Extraction
# At least ONE of these is required for AI transcription to work

# Claude API (Anthropic) - Recommended primary provider
# Get key from: https://console.anthropic.com
CLAUDE_API_KEY=your_claude_api_key

# Groq API - Free tier available, used as fallback
# Get key from: https://console.groq.com
GROQ_API_KEY=your_groq_api_key

# Optional: Weather/Climate APIs
# Get key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweathermap_api_key

# Demo Mode
# Set to 'true' to use mock data (no external API calls required)
# Set to 'false' for production with real data
DEMO_MODE=false
